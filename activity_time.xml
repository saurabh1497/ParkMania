<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.signup.TimeActivity"
    android:background="@drawable/backgnd"
    >

    <TextView
        android:text="Select Time Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="?android:attr/colorPrimary" />

    <Button
        android:text="Proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_orange_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_marginTop="45dp"
        android:id="@+id/editText7"
        android:hint="End-Time"
        android:layout_below="@+id/editText6"
        android:layout_alignRight="@+id/button8"
        android:layout_alignEnd="@+id/button8"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/radioVType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6">

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:id="@+id/editText6"
        android:hint="Start-Time"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:textColor="?attr/actionMenuTextColor"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioVType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText6"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp">

    <RadioButton
        android:text="AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton11"
        android:layout_alignTop="@+id/editText7"
        android:layout_alignLeft="@+id/radioButton10"
        android:layout_alignStart="@+id/radioButton10"
        android:textSize="12sp" />

    <RadioButton
        android:text="PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton12"
        android:layout_below="@+id/radioButton11"
        android:layout_alignLeft="@+id/radioButton11"
        android:layout_alignStart="@+id/radioButton11"
        android:textSize="12sp" />
    </RadioGroup>

    <RadioButton
    android:text="AM"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/radioButton9"
        android:layout_alignTop="@+id/editText7"
        android:layout_alignLeft="@+id/radioButton10"
        android:layout_alignStart="@+id/radioButton10" />

    <RadioButton
        android:text="PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton10"
        android:layout_below="@+id/radioButton9"
        android:layout_alignLeft="@+id/radioVType"
        android:layout_alignStart="@+id/radioVType" />

</RelativeLayout>
